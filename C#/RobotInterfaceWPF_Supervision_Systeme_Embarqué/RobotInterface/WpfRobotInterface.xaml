        <GroupBox Grid.Column="1" Header="Console" Foreground="White" HorizontalAlignment="Stretch" Margin="5" Grid.Row="2" VerticalAlignment="Stretch" Background="Transparent">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label x:Name="LabelNbIMUDataPerSec" Content="Nb IMU data / sec : " Foreground="White"></Label>
                    <Label x:Name="LabelNbSpeedOdometryDataPerSec" Content="Nb odometry data / sec : " Foreground="White"></Label>
                    <Label x:Name="LabelNbLidarProcessedDataPerSec" Content="Nb Lidar data / sec : " Foreground="White"></Label>
                </StackPanel>
                <ScrollViewer Name="scrollViewerTextBoxConsole" Grid.Column="1">
                    <TextBlock Name="textBoxConsole" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="WrapWithOverflow" Text="" VerticalAlignment="Stretch" Background="Transparent" Foreground="White"
                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
                </ScrollViewer>
            </Grid>

        </GroupBox>


        <oscillo:WpfOscilloscope x:Name="oscilloLidar" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="20" MouseDoubleClick="ZoomOnGraph_MouseDoubleClick"/>
        <!--<ext:LocalWorldMapDisplay x:Name="worldMapDisplay" Grid.Row="1" Grid.Column="1"  MouseDoubleClick="worldMapDisplay_MouseDoubleClick" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></ext:LocalWorldMapDisplay>-->
        <Viewbox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" Stretch="Uniform" MaxWidth="900" MaxHeight="800"   >
            <ext:LocalWorldMapDisplay x:Name="worldMapDisplayStrategy" Width="300" Height="200" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></ext:LocalWorldMapDisplay>
            <!--MouseDoubleClick="worldMapDisplay_MouseDoubleClick"-->
        </Viewbox>
        <Viewbox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Stretch="Uniform" MaxWidth="900" MaxHeight="800"   >
            <ext:LocalWorldMapDisplay x:Name="worldMapDisplayWaypoint" Width="300" Height="200" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></ext:LocalWorldMapDisplay>
            <!--MouseDoubleClick="worldMapDisplay_MouseDoubleClick"-->
        </Viewbox>

        <StackPanel Grid.Row="4" Grid.Column="2" VerticalAlignment="Top">
            <Button x:Name="Button_0_0" HorizontalAlignment="Center" Width="60" Margin="4" Content="Go to (0,0)" Click="Button_0_0_Click"/>
            <Button x:Name="Button_0_1" HorizontalAlignment="Center" Width="60" Margin="4" Content="Go to (0,1)" Click="Button_0_1_Click"/>
            <Button x:Name="Button_1_0" HorizontalAlignment="Center" Width="60" Margin="4" Content="Go to (1,0)" Click="Button_1_0_Click"/>
            <Button x:Name="Button_0_m1" HorizontalAlignment="Center" Width="60" Margin="4" Content="Go to (0,-1)" Click="Button_0_m1_Click"/>
            <Button x:Name="Button_m1_0" HorizontalAlignment="Center" Width="60" Margin="4" Content="Go to (-1,0)" Click="Button_m1_0_Click"/>
        </StackPanel>

        <!--<GroupBox x:Name="groupBox" Header="Reception" Margin="0" Background="#FFDDDDDD" BorderBrush="Black" Grid.Column="1" Grid.Row="1">
            <TextBox x:Name="textBoxReception" Margin="0" Grid.Row="1" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" AcceptsReturn="True"/>
        </GroupBox>-->
